{
  "image": "ghcr.io/gregac/sonata-software-container:latest",
  "remoteUser": "sonata",
  "containerUser": "sonata",
  "onCreateCommand": "cd /workspaces && git clone https://github.com/lowRISC/sonata-system.git",
  "settings": {
    "terminal.integrated.profiles.linux": {
      "Nix devshell": {
        "path": "nix",
        "args": [
           "develop",
           "github:lowRISC/lowrisc-nix#cheriot"
        ]
      }
    },
    "terminal.integrated.defaultProfile.linux": "Nix devshell"
  }
}
